<conceptdatabase xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xmlns="conceptdb-1.1.0.xsd"
                 xsi:schemaLocation="conceptdb-1.1.0.xsd conceptdb-1.1.0.xsd
        http://www.julielab.de/conceptdb/concepts/xml xmlconcepts-1.1.0.xsd
        http://www.julielab.de/conceptdb/facets/mesh meshfacet-1.1.0.xsd">
    <versioning>
        <version>1.0-test</version>
    </versioning>
    <connection>
        <uri>src/test/resources/graph.db</uri>
    </connection>
    <preparations>
        <operation>
            <request>
                <class>de.julielab.neo4j.plugins.Indexes</class>
                <method>createIndexes</method>
                <parameters>
                    <parameter name="db_name" javatype="java.lang.String">neo4j</parameter>
                </parameters>
            </request>
        </operation>
    </preparations>
    <imports>
        <import>
            <concepts>
                <creator xmlns="http://www.julielab.de/conceptdb/concepts/xml">
                    <name>de.julielab.concepts.db.creators.mesh.MeshXmlConceptCreator</name>
                    <configuration>
                        <input>
                            <xmlfile>src/test/resources/europiumDescriptor.xml</xmlfile>
                            <format>MESH_XML</format>
                            <sourcename>MeSH XML</sourcename>
                            <originalsources>
                                <source>MeSH XML</source>
                            </originalsources>
                        </input>
                        <input>
                            <xmlfile>src/test/resources/supplementalRecord.xml</xmlfile>
                            <format>MESH_SUPPLEMENTARY_XML</format>
                            <sourcename>MeSH Supplementary XML</sourcename>
                            <originalsources>
                                <source>MeSH Supplementary XML</source>
                            </originalsources>
                        </input>
                    </configuration>
                </creator>
            </concepts>
            <facet>
                <creator xmlns="http://www.julielab.de/conceptdb/facets/mesh">
                    <name>de.julielab.concepts.db.creators.mesh.MeshFacetCreator</name>
                    <configuration>
                        <facetgroup>
                            <name>MeSH</name>
                        </facetgroup>
                    </configuration>
                </creator>
            </facet>
        </import>
    </imports>
</conceptdatabase>